<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:draw="clr-namespace:EBM2x.UI.Draw;assembly=EBM2x" 
             x:Class="EBM2x.UI.Component.EchoPanel">
    <ContentView.Content>
        <draw:FixedGrid ColumnCount="16" RowCount="2">
            <draw:DrawBox Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="16" Color="f6f6f6"/>
            <draw:DrawCursor Grid.Row="0" Grid.Column="15" Grid.RowSpan="2" Cursor="|"/>

            <draw:DrawEnteredLength x:Name="enteredLength"
                                    Grid.Row="0" Grid.Column="14" Grid.ColumnSpan="2"/>
            <draw:DrawEnteredText x:Name="enteredText"
                                  Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="15"/>

        </draw:FixedGrid>
    </ContentView.Content>
</ContentView>