<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:draw="clr-namespace:EBM2x.UI.Draw;assembly=EBM2x" 
             x:Class="EBM2x.UI.Component.InformationPanel">
    <ContentView.Content>
        <draw:FixedGrid ColumnCount="16" RowCount="2">
            <draw:DrawBox Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="16" Color="d4f0cd"/>
            <draw:DrawImage Grid.Row="0" Grid.Column="0" Icon="warning.png"/>
            <draw:DrawImage Grid.Row="1" Grid.Column="0" Icon="information.png"/>
            <draw:DrawTranslationText x:Name="warningText"
                           Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="15" FillRate="0.5" TextColor="c01400"/>
            <draw:DrawTranslationText x:Name="informationText"
                         Grid.Row="1" Grid.Column="1" FillRate="0.5" Grid.ColumnSpan="15"/>
        </draw:FixedGrid>
    </ContentView.Content>
</ContentView>