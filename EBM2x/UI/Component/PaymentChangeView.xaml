<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:draw="clr-namespace:EBM2x.UI.Draw;assembly=EBM2x" 
             x:Class="EBM2x.UI.Component.PaymentChangeView">
    <ContentView.Content>
        <draw:FixedGrid ColumnCount="16" RowCount="2">
            <draw:DrawBox Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="16" Color="f6e4e6"/>

            <draw:DrawText Grid.Row="1" Grid.Column="0" Grid.RowSpan="1" Grid.ColumnSpan="5" Text="Change :"/>
            <draw:DrawNumber x:Name="changeNumber" FillRate="0.5"
                              Grid.Row="0" Grid.Column="5" Grid.RowSpan="2" Grid.ColumnSpan="11"/>
        </draw:FixedGrid>
    </ContentView.Content>
</ContentView>