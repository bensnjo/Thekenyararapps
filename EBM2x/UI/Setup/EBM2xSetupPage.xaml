            <drawbase:DrawText Grid.Column="0" Grid.Row="18" Grid.ColumnSpan="20" Grid.RowSpan="1"
                            IsStroke="True" StrokeColor="000000" BoxColor="95a8b6"
                            x:Name="textMySQLPwd" Text="  MySQL Pwd" FillRate="0.4"/>
